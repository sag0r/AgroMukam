@using Nop.Core
@using Nop.Web.Framework.UI
@inject IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var userAgent = Url.ActionContext.HttpContext.Request.Headers["User-Agent"];

    var isIe9 = false;
    if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().ToLower().IndexOf("MSIE 9.0", StringComparison.InvariantCultureIgnoreCase) > 0)
    {
        isIe9 = true;
    }

    if (isIe9)
    {
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/ie9-fix.css");
    }

    var isIe10or11 = false;
    if (!String.IsNullOrEmpty(userAgent) &&
        (userAgent.ToString().IndexOf("MSIE 10", StringComparison.InvariantCultureIgnoreCase) > 0 || userAgent.ToString().IndexOf("MSIE 11", StringComparison.InvariantCultureIgnoreCase) > 0))
    {
        isIe10or11 = true;
    }

    if (isIe10or11)
    {
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/ie10-11-fix.css");
    }

    if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().IndexOf("Safari", StringComparison.InvariantCultureIgnoreCase) > 0 && userAgent.ToString().IndexOf("Chrome", StringComparison.InvariantCultureIgnoreCase) == -1)
    {
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/safari-fix.css");
    }

    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/1200.rtl.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/mobile.rtl.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/custom.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/mega-menu/mega-menu-ext.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/mega-menu/color-skins/white-green.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/mega-menu/mega-menu.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/mega-menu/dropdown-effects/rotate-y.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/bootstrap.min.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/font-awesome/css/all.min.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/1200.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/mobile.css");
        Html.AppendCssFileParts("~/Themes/Venture/Content/css/styles.css");
    }

    <script asp-location="Footer" src="/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js" defer></script>
    <script asp-location="Footer" src="/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js" defer></script>
    <script asp-location="Footer" src="/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.min.js" defer></script>
    <script asp-location="Footer" src="/Plugins/SevenSpikes.Core/Scripts/cookiehelper.min.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/scripts/venture.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/scripts/jquery.steps.min.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/scripts/popper.min.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/scripts/bootstrap.min.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/scripts/jquery.hoverIntent.min.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/mega-menu/mega-menu.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/mega-menu/mega-menu.js" defer></script>
    <script asp-location="Footer" src="/Themes/Venture/Content/mega-menu/mega-menu-ext.js" defer></script>
