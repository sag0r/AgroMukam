@model CustomerWishResponseCreateModel

<div class="card shadow-sm rounded-0 mb-3">
    <div class="card-body">
        <form asp-action="CreateResponse" novalidate>
            <input asp-for="RequestId" type="hidden" />
            <div class="form-group">
                <label asp-for="CommentText" class="control-label"></label>
                <input asp-for="CommentText" class="form-control form-control-bs form-control-sm" />
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProposedPrice" class="control-label"></label>
                <input asp-for="ProposedPrice" class="form-control form-control-bs form-control-sm" />
                <span asp-validation-for="ProposedPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryStartDateUtc" class="control-label"></label>
                <input asp-for="DeliveryStartDateUtc" class="form-control form-control-sm rounded-0" />
                <span asp-validation-for="DeliveryStartDateUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryEndDateUtc" class="control-label"></label>
                <input asp-for="DeliveryEndDateUtc" class="form-control form-control-sm rounded-0" />
                <span asp-validation-for="DeliveryEndDateUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn bg-greenish btn-sm shadow rounded-0 btn-submit-wish-response"> Submit </button>
            </div>
        </form>
    </div>
</div>